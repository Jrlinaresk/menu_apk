<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Search EditText style -->
    <style name="SearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- CardView Style -->
    <style name="CustomCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_weight">1</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <!-- RadioGroup Style -->
    <style name="MaterialRadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="colorControlActivated">@color/radio_button_checked</item>  <!-- Color activado -->
        <item name="colorControlNormal">@color/radio_button_unchecked</item>  <!-- Color desactivado -->
    </style>

    <!-- RadioButton Style -->
    <style name="MaterialRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="colorControlActivated">@color/radio_button_checked</item>  <!-- Color activado -->
        <item name="colorControlNormal">@color/radio_button_unchecked</item>  <!-- Color desactivado -->

    </style>

    <style name="DialogFadeInAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>




</resources>