<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Menu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales y de acento -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Colores adicionales para la UI -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:iconTint">@color/backgroundColor</item>
        <!-- Aquí se hace que los iconos de la barra de estado sean negros -->
        <item name="android:windowLightStatusBar">false</item>


        <!-- Customización adicional si es necesario -->
    </style>

    <style name="Theme.Menu" parent="Base.Theme.Menu" />

    <style name="Base.Theme.Menu.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
